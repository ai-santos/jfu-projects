<div class="jumbotron">
  <h1><%= project.name %></h1>
  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="http://placehold.it/350x150" alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= project.address %></h4>
      <h4 class="media-heading"><%= project.city %></h4>
      <h4 class="media-heading"><%= project.state %></h4>
      <h4 class="media-heading"><%= project.zip %></h4>
      <h4 class="media-heading"><%= project.phone %></h4>
      <h4 class="media-heading"><%= project.email %></h4>
      <p><%= project.description %><p>
    </div>
  </div>
  <a class="btn btn-primary btn-lg" href="/projects/edit/<%= project.id %>" role="button">Edit</a>
</div>